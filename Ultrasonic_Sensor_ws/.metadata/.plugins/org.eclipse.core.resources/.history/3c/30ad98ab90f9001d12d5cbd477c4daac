#include "common_macros.h"
#include <util/delay.h>
#include "icu.h"
#include "gpio.h"
#include "ultrasonic.h"

static uint16 time;
static uint16 distance=0;

/*******************************************************************************
 *                      Functions Definitions                                  *
 *******************************************************************************/
/*
 * Description :
 * Initialize the ICU driver as required.
 * 1. Setup the ICU call back function.
 * 2. Setup the direction for the trigger pin as output pin through the
      GPIO driver.
 */
void Ultrasonic_init(void)
{
	ICU_ConfigType ICU_EdgeType={F_CPU_8,RAISING};
	ICU_init(&ICU_EdgeType);
	ICU_setCallBack(Ultrasonic_edgeProcessing);
	GPIO_setupPinDirection(TRIGGER_PORT_ID,TRIGGER_PINI_ID,PIN_OUTPUT);
}


/*
 * Description :
 * Send the Trigger pulse to the ultrasonic..
 */
void Ultrasonic_Trigger(void)
{
	GPIO_writePin(TRIGGER_PORT_ID,TRIGGER_PINI_ID,LOGIC_HIGH);
	_delay_ms(10);
	GPIO_writePin(TRIGGER_PORT_ID,TRIGGER_PINI_ID,LOGIC_LOW);
}



/*
 * Description :
 * Send the trigger pulse by using Ultrasonic_Trigger function.
 * Start the measurements by the ICU from this moment
 */
uint16 Ultrasonic_readDistance(void)
{
	Ultrasonic_Trigger();
	return ((time/58.8));
}

/*
 * Description :
 * This is the call back function called by the ICU driver.
 * This is used to calculate the high time (pulse time) generated by
   the ultrasonic sensor
 */
void Ultrasonic_edgeProcessing(void)
{
	static uint8 edges_counter;
	edges_counter++;
	if(edges_counter==1){
		ICU_clearTimerValue();
		ICU_setEdgeDetectionType(FALLING);
	}
	else if(edges_counter==2){
		time = ICU_getInputCaptureValue();
		ICU_setEdgeDetectionType(RAISING);
		edges_counter = 0 ;
	}

}














